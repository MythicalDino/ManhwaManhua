{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(core)/manga/[mangaId]/chapter/[chapterId]/read/page.jsx",
    "app/(home)/layout.jsx",
    "app/(home)/manga/layout.jsx",
    "app/(home)/page.tsx",
    "app/Core/Home.jsx",
    "app/manga-list/page.jsx",
    "app/manga/[mangaId]/chapters/page.jsx",
    "app/page.jsx",
    "next-env.d.ts",
    "dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
